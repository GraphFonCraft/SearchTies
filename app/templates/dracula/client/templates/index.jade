//- Homepage Markup
extends layouts/base

block content
	main.site-container.row
		h1.site-title.text-center=data.title
		.search-wrapper.citu-wrapper
			.search-wrapper-target.citu-target.row
				form.search-field.medium-5.small-centered.columns
					.row.collapse
						.small-8.columns
							input(type='search' placeholder=data['description-short'] autofocus)
						.small-4.columns
							button.postfix(type='submit') Узнать
			p.site-description.medium-5.large-4.small-centered.columns=data.description
	footer.site-footer.row
		.small-12.columns.text-right
			include:md data/footer.md
